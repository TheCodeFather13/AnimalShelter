@page "/navbar"
@using Microsoft.AspNetCore.Components.Authorization

<link href="css/MyStyle.css" rel="stylesheet" />

<nav class="navbar navbar-expand-lg navbar-toggleable-lg box-shadow mb-3 bc-navbar">
    <div class="container">
        <a class="navbar-brand text-light" asp-area="" asp-page="/Index"><img src="css/Images/MainLogo.png" class="img" alt="" /></a>
        <div>
            <ul class="navbar-nav">

                <li class="nav-item images">
                    <a class="nav-link" href="" Match="NavLinkMatch.All"><img src="css/Images/kitty.png" class="imgIcons" alt="" /><span style="color:white;font-size:25px;">&nbsp;Главная</span></a>
                </li>

                <li class="nav-item images">
                    <a class="nav-link" href="sections"><img src="css/Images/book.png" class="imgIcons" alt="" /><span style="color:white;font-size:25px;">&nbsp;Статьи</span></a>
                </li>

                <li class="nav-item images">
                    <a class="nav-link" href="dogs"><img src="css/Images/foot.png" class="imgIcons" alt="" /><span style="color:white;font-size:25px;">&nbsp;Собаки</span></a>
                </li>

                <li class="nav-item images">
                    <a class="nav-link" href="cats"><img src="css/Images/foot.png" class="imgIcons" alt="" /><span style="color:white;font-size:25px;">&nbsp;Кошки</span></a>
                </li>

                <CascadingAuthenticationState>
                    <AuthorizeView Roles="Admin">
                        <li class="nav-item images">
                            <a class="nav-link" href="admin"><img src="css/Images/admin.png" class="imgIcons" alt="" /><span style="color:white;font-size:25px;">&nbsp;Админ</span></a>
                        </li>
                    </AuthorizeView>
                </CascadingAuthenticationState>               
                
            </ul>
        </div>
    </div>
</nav>

@code {
    bool collapseNavMenu = true;

    string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    void CollapseNavMenu()
    {
        collapseNavMenu = false;
    }
}